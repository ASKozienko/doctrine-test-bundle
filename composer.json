{
  "name": "dama/doctrine-test-bundle",
  "description": "Symfony2 bundle to isolate doctrine database tests and improve performance",
  "keywords": ["symfony2", "doctrine", "tests", "isolation", "performance"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "David Maicher",
      "email": "mail@dmaicher.de"
    }
  ],
  "require": {
    "php": "^7.0",
    "symfony/symfony": "~2.3|~3.0",
    "doctrine/dbal": "~2.5",
    "doctrine/doctrine-bundle": "~1.4",
    "phpunit/phpunit": "^6.0@dev"
  },
  "autoload": {
    "psr-4": {
      "DAMA\\DoctrineTestBundle\\": "src/DAMA/DoctrineTestBundle"
    }
  },
  "autoload-dev": {
    "psr-4": { "Tests\\": "tests/" }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.1.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
